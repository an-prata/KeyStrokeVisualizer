<Window x:Class="KeyStrokeVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyStrokeVisualizer"
        mc:Ignorable="d"

        Title="MainWindow" 
        Height="450" 
        Width="800" 
        Loaded="Window_Loaded"
        WindowStyle="None" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        WindowState="Normal" 
        Focusable="False" 
        IsTabStop="False" 
        AllowsTransparency="True" 
        Opacity="0.8" 
        Background="#1E1E1E" 
        Foreground="#FFECECEC" 
        HorizontalAlignment="Stretch" 
        HorizontalContentAlignment="Right"
        UseLayoutRounding="True" 
        SizeToContent="WidthAndHeight" 
        Topmost="True">
    <Grid>
        <TextBlock x:Name="textBlock_Input" TextWrapping="NoWrap" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,16,16,16" FontFamily="Cascadia Code" FontSize="30" FontWeight="Normal" FlowDirection="LeftToRight"/>
    </Grid>
</Window>
